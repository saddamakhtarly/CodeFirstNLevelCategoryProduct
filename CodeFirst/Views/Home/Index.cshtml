@using CodeFirst.Models
@model dynamic
<div class="row">
    <table class="table table-bordered col-6">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
        @foreach (Product product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </table>


    <table class="table table-bordered  col-6">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @foreach (Category category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
</div>
<br />
<div>
    @Html.DropDownList("Country", ViewBag.Country as SelectList, "-- Please Select a Category  --", new { style = "width:250px" })
</div>
<br />
<div>
    @Html.DropDownList("State", new SelectList(string.Empty, "Value", "Text"), "-- Please select a Product --", new { style = "width:250px", @class = "dropdown1" })
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        //Country Dropdown Selectedchange event
        $("#Country").change(function () {
            $("#State").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetStates")', // Calling json method
                dataType: 'json',
                data: { id: $("#Country").val() },
                // Get Selected Country ID.
                success: function (states) {
                    $.each(states, function (i, state) {
                        $("#State").append('<option value="' + state.Value + '">' +
                             state.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    });
</script>  